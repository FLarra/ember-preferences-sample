{{#paper-card as |card|}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      {{#text.headline}}{{headline}}{{/text.headline}}
      {{#text.subhead}}{{subhead}}{{/text.subhead}}
      {{val}}
    {{/title.text}}
    {{#if default}}
      {{title.media size=size src="assets/images/default.ico" alt="Tomster" title="Tomster"}}
    {{else}}
      {{title.media size=size src="assets/images/tomster-uy.png" alt="Tomster" title="Tomster"}}
    {{/if}}
  {{/card.title}}
  {{#card.actions}}
    {{#if expiration}}
      {{#paper-button onClick=(action "hideCard" 10)}}Disable 10"{{/paper-button}}
      {{#paper-button onClick=(action "hideCard" 120)}}Disable 2'{{/paper-button}}
    {{else if persistence}}
      {{#paper-switch value=persistActive onChange=(action "toggle") primary=true}}
        {{actionate}}
      {{/paper-switch}}
    {{/if}}
  {{/card.actions}}
{{/paper-card}}
